{
  "variables": {
    "iso_checksum_type": "md5",
    "memory": "512",
    "cores": "1",
    "disk_size": "20000",
    "ssh_username": "root",
    "ssh_password": "password",
    "ssh_wait_timeout": "1200s",
    "shutdown_command": "shutdown now -P",
    "headless": "true",
    "vm_name": "arch-linux-build",
    "minimal_configuration": "false"
  },

  "builders": [

    {
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "boot_command": [
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "echo 'root:password' | chpasswd",
        "<enter>",
        "systemctl start sshd",
        "<enter>",
        "<wait5>"
      ],
      "iso_urls": [
        "{{ user `local_iso_path` }}",
        "{{ user `remote_iso_path` }}"
      ],
      "vm_name": "{{ user `vm_name` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "communicator": "ssh",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "headless": "{{ user `headless` }}",
      "guest_additions_mode": "disable"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": ["env"]
    },
    {
      "type": "shell",
      "script": "./scripts/arch-install-scripts/pre-install.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/arch-install-scripts/install.sh"
    },
    { "type": "shell",
      "script": "./scripts/install_guest_additions.sh"
    },
    {
      "type": "file",
      "source": "./files/insecure_public_key",
      "destination": "/tmp/insecure_public_key"
    },
    {
      "type": "shell",
      "script": "./scripts/arch-install-scripts/configure.sh",
      "environment_vars": ["MINIMAL_CONFIGURATION={{ user `minimal_configuration` }}"]
    }
  ],

  "post-processors": [
    {
      "type": "compress",
      "compression_level": 4,
      "output": "./build/arch-linux.tar.gz"
    },
    {
      "type": "vagrant",
      "compression_level": 4,
      "vagrantfile_template": "./Vagrantfile",
      "output": "./build/{{ user `vm_name` }}_{{ .Provider }}.box"
    }
  ]
}
