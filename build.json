{
  "variables": {
    "local_iso_path": "iso/archlinux-2017.08.01-x86_64.iso",
    "remote_iso_path": "http://mirror.bytemark.co.uk/archlinux/iso/2017.08.01/archlinux-2017.08.01-x86_64.iso",
    "iso_checksum_type": "sha256",
    "iso_checksum": "b762ad79a018724338617579ecef28f258488adededea68a637115f374d9b7a4",
    "memory": "512",
    "cores": "1",
    "disk_size": "20000",
    "ssh_username": "root",
    "ssh_password": "password",
    "ssh_wait_timeout": "1200s",
    "shutdown_command": "shutdown now -P",
    "headless": "true",
    "vm_name": "arch-linux"
  },

  "builders": [

    {
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "boot_command": [
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "echo 'root:password' | chpasswd",
        "<enter>",
        "systemctl start sshd",
        "<enter>",
        "<wait5>"
      ],
      "iso_urls": [
        "{{ user `local_iso_path` }}",
        "{{ user `remote_iso_path` }}"
      ],
      "vm_name": "{{ user `vm_name` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "communicator": "ssh",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "headless": "{{ user `headless` }}",
      "guest_additions_mode": "disable"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/pre-install.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/install.sh"
    }
  ],

  "post-processors": []
}
